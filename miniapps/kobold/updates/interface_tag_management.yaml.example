      select: name, interfaces
      from: nb.devices
      where: name=lab-01.zz and interfaces_name=Loopback0
    tasks:
      - delete_tag:
          scope: dcim.interface
          tag: dhcp
      - add_tag:
          scope: dcim.interface
          tag: dhcp
      - set_tag:
          scope: dcim.interface
          tag: dhcp
